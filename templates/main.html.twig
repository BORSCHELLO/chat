{% extends 'base.html.twig' %}
{% block body%}
    <div class="container h-100 justify-content: space-between;">
       <nav class="navbar navbar-expand-lg navbar-light bg-light border">
        <a class=" col-md-8 RedBoldText" href="#">BORSChat</a>
        <div class="collapse navbar-collapse col-md-4" id="navbarTogglerDemo02">
            <p class="nav-link m-0 pr-2">Вы вошли как: <span class="RedBoldText">{{app.user.name}}</span>
                    <span>Заходили:</span><span class="LastVisitDate">{{app.session.get('lastVisit')|date("H:i:s m-d-Y")}}</span></p>
            <form class="form-inline my-2 my-lg-0">
                <a class="btn btn-outline-success my-2 my-sm-0" href="{{ path('profile_logout')}}" >Выйти</a>
            </form>
        </div>
    </nav>

    {% for message in app.flashes('success') %}
        <div id="my-alert" class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <script>
                $(function(){
                    window.setTimeout(function(){
                        $('#my-alert').alert('close');
                    },2000);
                });
            </script>
        </div>
    {% endfor %}
        <div class="mainBlock">
            <div class="chat-messages" >
            {% for message in messages %}
            <div class="messages" style="{% if  message.user.id  == app.user.id %} background-color: white; float: right;
            {% else %} background-color: gainsboro; float: left; {% endif %}">
                <p class="userName">{{ message.user.name }}</p>
                <p class="message">{{ message.message }}</p>
                <p class="date">{{ message.createdat |date("H:i:s m/d/Y") }}</p>
            </div>
            {% endfor %}
            </div>
            <div class="chat-form">
                        {{ form_start(formMessage) }}
                        {{ form_widget(formMessage) }}
                        {{ form_end(formMessage) }}
            </div>
        </div>
    </div>
    {% endblock %}
